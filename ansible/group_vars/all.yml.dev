# Имя пользователя с административными правами
admin_user: kipper

# Имя пользователя без административных прав
user_name: lekved

# Адрес сайта
server_name: lekved.local

# Адрес сайта с www
www_server_name: www.{{ server_name }}

# Директория проекта
project_root: /home/{{ user_name }}/www/{{ server_name }}

# Директория сайта
site_root: "{{ project_root }}/public"

# Использовать сертификат от Let's Encrypt
# На компьютере разработчика это значение должно быть установлено в false,
# тогда будет использоваться самоподписанный сертификат.
# Для рабочего сервера это значение должно быть установлено в true.
# Значение по умолчанию true, чтобы не испортить рабочий сервер.
use_lets_encrypt: false

# Сертификат сайта
# Путь к самоподписанному сертификату
ssl_certificate: /etc/ssl/certs/nginx-selfsigned.crt
# По умолчанию указан путь к сертификату, который был получен от Let's Encrypt
# ssl_certificate: /etc/letsencrypt/live/{{ www_server_name }}/fullchain.pem

# Приватный ключ для сертификата
# Путь к кючу, который был сгенерирован, при создании самоподписанного сертификата
ssl_certificate_key: /etc/ssl/private/nginx-selfsigned.key
# По умолчанию указан путь к ключу, который был сгенирирован, при получении сертификата Let's Encrypt
# ssl_certificate_key: /etc/letsencrypt/live/{{ www_server_name }}/privkey.pem

# Файл сильной ДХ группы
dhparam_pem: /etc/ssl/certs/dhparam.pem

# Адрес электронной почты для получения уведомлений от Let’s Encrypt
admin_email: user@domain.mail

# Версия phpDocumentor
phpdoc_version: 2.9.0